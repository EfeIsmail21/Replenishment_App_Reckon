<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ReplenishMachine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#00ffcc</item>
        <item name="colorPrimaryDark">#00d6aa</item>
        <item name="colorAccent">#00ffcc</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#80ffffff</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Theme.ReplenishMachine" parent="Base.Theme.ReplenishMachine" />
    
    <!-- Vuzix specific button style -->
    <style name="VuzixButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="VuzixButtonAccent" parent="VuzixButton">
        <item name="android:background">#00ffcc</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- Vuzix specific text styles -->
    <style name="VuzixText">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="VuzixText.Heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00ffcc</item>
    </style>
    
    <style name="VuzixText.Body">
        <item name="android:textSize">14sp</item>
    </style>
</resources>