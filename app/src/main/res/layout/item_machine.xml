<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <!-- Selection border - visible only when selected -->
    <View
        android:id="@+id/selectionBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFCC"
        android:padding="2dp"
        android:visibility="gone" />

    <!-- Main content card -->
    <LinearLayout
        android:id="@+id/machineCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#222222"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Selection indicator arrow - visible only when selected -->
        <ImageView
            android:id="@+id/selectionIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/arrow_down_float"
            android:tint="#00FFCC"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/machineIconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/machine_icon"
            android:src="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/machineCodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/organizationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <!-- Status indicator - "ACTIVE" shows when selected -->
        <TextView
            android:id="@+id/statusIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#00FFCC"
            android:gravity="center"
            android:padding="2dp"
            android:text="ACTIVE"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>
